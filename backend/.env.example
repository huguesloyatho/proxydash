# ===========================================
# Dashboard Auto - Backend Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ============ Database ============
# Main application database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/proxydash

# NPM (Nginx Proxy Manager) database for sync
NPM_DATABASE_URL=postgresql://user:password@localhost:5432/npm

# ============ Security ============
# Secret key for JWT token signing (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production

# JWT algorithm
ALGORITHM=HS256

# Token expiration time in minutes (default: 1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============ Ollama (AI Assistant) ============
# Ollama API URL for the AI chat assistant
OLLAMA_URL=http://localhost:11434

# Ollama model to use (e.g., mistral:7b, llama2, codellama)
OLLAMA_MODEL=mistral:7b

# ============ Sync ============
# Interval between NPM sync operations (in minutes)
SYNC_INTERVAL_MINUTES=5

# ============ Redis Cache ============
# Redis connection URL
REDIS_URL=redis://localhost:6379

# Enable/disable Redis caching (set to false if Redis is not available)
REDIS_ENABLED=true

# Default cache TTL in seconds
REDIS_CACHE_TTL=30

# ============ WebSocket ============
# Enable/disable WebSocket for real-time updates
WS_ENABLED=true

# WebSocket heartbeat interval in seconds
WS_HEARTBEAT_INTERVAL=30

# ============ Webhooks (Optional) ============
# Base URL for webhook callbacks (used to generate webhook URLs)
# If not set, will use the request host
# WEBHOOK_BASE_URL=https://your-domain.com

# ============ Speech Recognition (Optional) ============
# Whisper model size for speech recognition (tiny, base, small, medium, large)
# WHISPER_MODEL_SIZE=base

# ============ Web Search (Optional) ============
# SearXNG instance URL for web search in AI assistant
# SEARXNG_URL=http://localhost:8080
