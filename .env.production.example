# ===========================================
# Dashboard Auto - Production Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ============ Database ============
# PostgreSQL connection URL for the main application database
DATABASE_URL=postgresql://user:password@db-host:5432/proxydash

# PostgreSQL connection URL for NPM database (for synchronization)
NPM_DATABASE_URL=postgresql://user:password@db-host:5432/npm

# ============ Security ============
# IMPORTANT: Generate a secure random key for production
# Command: openssl rand -hex 32
SECRET_KEY=your-production-secret-key-here

# JWT algorithm (default: HS256)
ALGORITHM=HS256

# Token expiration in minutes (default: 1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============ Public URLs ============
# Public URL for the API (used by frontend and webhooks)
PUBLIC_API_URL=https://api.your-domain.com

# Public URL for the frontend application
PUBLIC_APP_URL=https://your-domain.com

# Base URL for webhook callbacks (if different from PUBLIC_API_URL)
WEBHOOK_BASE_URL=https://api.your-domain.com

# ============ AI (Ollama) ============
# Ollama server URL
OLLAMA_URL=http://ollama:11434

# Ollama model to use
OLLAMA_MODEL=mistral:7b

# ============ Sync ============
# NPM sync interval in minutes
SYNC_INTERVAL_MINUTES=5

# ============ Redis ============
# Redis is configured internally in docker-compose
# These are optional overrides
REDIS_ENABLED=true
REDIS_CACHE_TTL=30

# ============ WebSocket ============
# Enable WebSocket for real-time updates
WS_ENABLED=true
WS_HEARTBEAT_INTERVAL=30
